    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navLinks = document.querySelectorAll('.nav-link');
            const contentSections = document.querySelectorAll('.content-section');
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');


            function setActiveLink(targetId) {
                navLinks.forEach(link => {
                    if (link.getAttribute('href') === `#${targetId}`) {
                        link.classList.add('active');
                    } else {
                        link.classList.remove('active');
                    }
                });
            }


            function showSection(targetId) {
                contentSections.forEach(section => {
                    if (section.id === targetId) {
                        section.classList.add('active');
                    } else {
                        section.classList.remove('active');
                    }
                });
                setActiveLink(targetId);
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }


            navLinks.forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href').substring(1);
                    showSection(targetId);
                    if (mobileMenu.classList.contains('block')) {
                        mobileMenu.classList.remove('block');
                        mobileMenu.classList.add('hidden');
                    }
                });
            });


            if (mobileMenuButton) {
                mobileMenuButton.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                    mobileMenu.classList.toggle('block');
                });
            }
           
            const initialSection = window.location.hash ? window.location.hash.substring(1) : 'inicio';
            const sectionExists = document.getElementById(initialSection);
            if (sectionExists && Array.from(contentSections).some(s => s.id === initialSection)) {
                 showSection(initialSection);
            } else {
                 showSection('inicio');
            }




            document.getElementById('currentYear').textContent = new Date().getFullYear();


            const investmentData = {
                labels: ['Desarrollo Tecnol칩gico/Activos', 'Capital Humano', 'Marketing y Ventas'],
                datasets: [{
                    label: 'Distribuci칩n de Inversi칩n',
                    data: [180000, 232908, 120000],
                    backgroundColor: ['#34D399', '#FBBF24', '#60A5FA'],
                    hoverOffset: 4
                }]
            };
            const investmentConfig = {
                type: 'pie',
                data: investmentData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) { label += ': '; }
                                    if (context.parsed !== null) {
                                        label += new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed);
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            };
            const inversionChartCtx = document.getElementById('inversionChart');
            if (inversionChartCtx) new Chart(inversionChartCtx, investmentConfig);




            const revenueData = {
                labels: ['A침o 1', 'A침o 2', 'A침o 3', 'A침o 4', 'A침o 5'],
                datasets: [{
                    label: 'Ingresos Proyectados (USD)',
                    data: [250000, 450000, 750000, 1000000, 1250000],
                    backgroundColor: '#34D399',
                    borderColor: '#10B981',
                    borderWidth: 1,
                    borderRadius: 5,
                }]
            };
            const revenueConfig = {
                type: 'bar',
                data: revenueData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true, ticks: { callback: value => '$' + (value/1000) + 'K' } } },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `Ingresos: ${new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed.y)}`;
                                }
                            }
                        }
                    }
                }
            };
            const ingresosChartCtx = document.getElementById('ingresosChart');
            if(ingresosChartCtx) new Chart(ingresosChartCtx, revenueConfig);




            const mipymesData = {
                labels: ['A침o 1 (Piloto)', 'A침o 2', 'A침o 3', 'A침o 4', 'A침o 5'],
                datasets: [{
                    label: 'MIPYMES Atendidas',
                    data: [15, 40, 75, 120, 180],
                    backgroundColor: '#FBBF24',
                    borderColor: '#F59E0B',
                    borderWidth: 1,
                    borderRadius: 5,
                }]
            };
            const mipymesConfig = {
                type: 'bar',
                data: mipymesData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true } },
                    plugins: {
                        legend: { display: false },
                         tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `MIPYMES: ${context.parsed.y}`;
                                }
                            }
                        }
                    }
                }
            };
            const mipymesChartCtx = document.getElementById('mipymesChart');
            if(mipymesChartCtx) new Chart(mipymesChartCtx, mipymesConfig);


            const formSubmissionMessage = document.getElementById('form-submission-message');
            function handleFormSubmit(formId, message) {
                const form = document.getElementById(formId);
                if (form) {
                    form.addEventListener('submit', function(e) {
                        e.preventDefault();
                        if (formSubmissionMessage) {
                            formSubmissionMessage.textContent = message;
                            formSubmissionMessage.classList.remove('hidden');
                            setTimeout(() => {
                                formSubmissionMessage.classList.add('hidden');
                            }, 3000);
                        }
                        form.reset();
                    });
                }
            }


            handleFormSubmit('contactFormMIPYME', 'Gracias por tu consulta. Nos pondremos en contacto contigo pronto.');
            handleFormSubmit('contactFormSocio', 'Gracias por tu inter칠s. Te contactaremos con informaci칩n sobre la alianza.');


        });
    </script>
</body>
