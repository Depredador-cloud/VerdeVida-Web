            },
            options: {...donutChartOptions, plugins: {...donutChartOptions.plugins, title: {...donutChartOptions.plugins.title, text:'Financiamiento Inicial MYPES (El Salvador)'}}}
        });
        
        new Chart(document.getElementById('perdidasPlagasChart').getContext('2d'), {
            type: 'bar',
            data: {
                labels: [wrapLabel('P√©rdidas Globales por Plagas y Enfermedades (FAO)')],
                datasets: [{ label: 'M√≠nimo Estimado (%)', data: [20], backgroundColor: PALETTE.pink }, 
                           { label: 'M√°ximo Estimado (%)', data: [40], backgroundColor: PALETTE.orange }]
            },
            options: { ...defaultChartOptions, indexAxis: 'y', scales: { ...defaultChartOptions.scales, x: {...defaultChartOptions.scales.x, suggestedMax: 50, ticks: { color: CHART_FONT_COLOR, stepSize: 10 } }, y: {...defaultChartOptions.scales.y, grid: {display:false}} }, plugins: {...defaultChartOptions.plugins, title: {...defaultChartOptions.plugins.title, display: true, text:'Rango de P√©rdidas Globales'}}}
        });

        new Chart(document.getElementById('ahorroAguaPrecisionChart').getContext('2d'), {
