            <p class="text-sm">&copy; 2025 Infograf√≠a del Sector Ganadero de El Salvador. Basada en el Informe de Investigaci√≥n Profunda.</p>
            <p class="text-xs mt-1">Visualizaci√≥n de datos con fines informativos.</p>
        </div>
    </footer>

    <script>
        const CHART_COLORS = {
            blue1: '#0A4C6A', // Azul Profundo
            blue2: '#007BA7', // Azul Medio
            turquoise: '#20C997', // Turquesa Brillante
            sand: '#F0E68C', // Arena Claro
            coral: '#FF7F50', // Coral Suave
            gray: '#CBD5E0' // Gris claro para ejes/texto
        };

        function wrapLabels(labels, maxWidth) {
            return labels.map(label => {
                if (typeof label === 'string' && label.length > maxWidth) {
                    const words = label.split(' ');
                    let currentLine = '';
                    const newLabel = [];
                    words.forEach(word => {
                        if ((currentLine + word).length > maxWidth && currentLine.length > 0) {
                            newLabel.push(currentLine.trim());
                            currentLine = word + ' ';
                        } else {
                            currentLine += word + ' ';
                        }
                    });
                    newLabel.push(currentLine.trim());
                    return newLabel;
                }
                return label;
            });
        }
        
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };

        // Gr√°fico Producci√≥n de Carne
        const produccionCarneCtx = document.getElementById('produccionCarneChart').getContext('2d');
        new Chart(produccionCarneCtx, {
            type: 'bar',
            data: {
                labels: wrapLabels(['Carne Bovina', 'Carne Porcina'], 16),
                datasets: [
                    {
                        label: 'Producci√≥n 2023/2024 (TM)',
                        data: [18000, 8000],
                        backgroundColor: CHART_COLORS.blue2,
                        borderColor: CHART_COLORS.blue1,
                        borderWidth: 1
                    },
                    {
                        label: 'Producci√≥n Proyectada 2024/2025 (TM)',
                        data: [17000, 8000],
                        backgroundColor: CHART_COLORS.turquoise,
                        borderColor: CHART_COLORS.blue2,
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Toneladas M√©tricas (TM)' },
                        ticks: { color: CHART_COLORS.gray }
                    },
                    x: { ticks: { color: CHART_COLORS.gray } }
                },
                plugins: {
                    legend: { labels: { color: CHART_COLORS.gray } },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });

        // Gr√°fico Producci√≥n L√°ctea
        const produccionLacteaCtx = document.getElementById('produccionLacteaChart').getContext('2d');
        new Chart(produccionLacteaCtx, {
            type: 'line',
            data: {
                labels: ['2021', '2022', '2023', '2024', '2025', '2026'],
                datasets: [{
                    label: 'Proyecci√≥n Disminuci√≥n Producci√≥n L√°ctea (% interanual)',
                    data: [0, -2.7, -2.7*2, -2.7*3, -2.7*4, -2.7*5], // Simulaci√≥n de tendencia acumulada
                    borderColor: CHART_COLORS.coral,
                    backgroundColor: CHART_COLORS.coral + '33', // Opacidad
                    fill: true,
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        title: { display: true, text: 'Cambio Acumulado (%)' },
                        ticks: { color: CHART_COLORS.gray, callback: function(value) { return value + '%';} }
                    },
                    x: { ticks: { color: CHART_COLORS.gray } }
                },
                plugins: {
                    legend: { labels: { color: CHART_COLORS.gray } },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });

        // Gr√°fico Salario vs Canasta
        const salarioCanastaCtx = document.getElementById('salarioCanastaChart').getContext('2d');
        new Chart(salarioCanastaCtx, {
            type: 'bar',
            data: {
                labels: wrapLabels(['Salario Agr√≠cola Promedio', 'Canasta B√°sica Rural'], 16),
                datasets: [{
                    label: 'Monto en USD',
                    data: [129.737, 137.546],
                    backgroundColor: [CHART_COLORS.turquoise, CHART_COLORS.coral],
                    borderColor: [CHART_COLORS.blue2, CHART_COLORS.blue1],
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        beginAtZero: true,
                        title: { display: true, text: 'USD' },
                        ticks: { color: CHART_COLORS.gray }
                    },
                    y: { ticks: { color: CHART_COLORS.gray, autoSkip: false } }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });
        
        // Gr√°fico Canal de Ventas (Supermercados)
        const canalVentasCtx = document.getElementById('canalVentasChart').getContext('2d');
        new Chart(canalVentasCtx, {
            type: 'doughnut',
            data: {
                labels: wrapLabels(['Supermercados', 'Otros Canales (Mayoristas, Tiendas Indep.)'], 16),
                datasets: [{
                    label: 'Distribuci√≥n de Ventas de Alimentos',
                    data: [40, 60],
                    backgroundColor: [CHART_COLORS.blue2, CHART_COLORS.turquoise],
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom', labels: { color: CHART_COLORS.gray } },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });

        // Gr√°fico Importaciones Agr√≠colas (Valor)
        const importacionesCtx = document.getElementById('importacionesChart').getContext('2d');
        new Chart(importacionesCtx, {
            type: 'bar',
            data: {
                labels: ['2019', '2023'],
                datasets: [{
                    label: 'Valor de Importaciones Agr√≠colas (Millones USD)',
                    data: [591, 811], // Aumento del 37% (811 es aprox 591 * 1.37)
                    backgroundColor: [CHART_COLORS.coral, CHART_COLORS.FF7F50 + 'AA'],
                    borderColor: CHART_COLORS.blue1,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Millones USD' },
                        ticks: { color: CHART_COLORS.gray }
                    },
                    x: { ticks: { color: CHART_COLORS.gray } }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });
        
        // Gr√°fico Emisiones GEI
        const emisionesGeiCtx = document.getElementById('emisionesGeiChart').getContext('2d');
        new Chart(emisionesGeiCtx, {
            type: 'doughnut',
            data: {
                labels: wrapLabels(['Ganader√≠a (% de emisiones agr√≠colas)', 'Resto Agr√≠cola'], 16),
                datasets: [{
                    label: 'Emisiones GEI del Sector Agr√≠cola',
                    data: [48.4, 51.6],
                    backgroundColor: [CHART_COLORS.coral, CHART_COLORS.sand],
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom', labels: { color: CHART_COLORS.gray } },
                    tooltip: { 
                        callbacks: { 
                            title: tooltipTitleCallback,
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed !== null) {
                                    label += context.parsed + '%';
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        });

    </script>
</body>
</html>
